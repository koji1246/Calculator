<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="fill_parent"

    android:layout_height="fill_parent"

    android:orientation="vertical" >



    <TextView

        android:id="@+id/displayPanel"

        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:layout_marginBottom="20dp"

        android:background="#ffffff"

        android:gravity="right"

        android:text="0"

        android:textColor="#000000"

        android:textSize="48sp"

         />



    <TableLayout

        android:id="@+id/tableLayout1"

        android:layout_width="match_parent"

        android:layout_height="match_parent" >



        <TableRow

            android:id="@+id/tableRow1"

            android:layout_width="wrap_content"

            android:layout_height="match_parent"

            android:layout_weight="1" >



            <Button

                android:id="@+id/keypadCopy"

                android:text="Copy"

                android:layout_width="80dp"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:onClick="functionKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypadC"

                android:text="C"

                android:layout_width="80dp"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:onClick="functionKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypadAC"

                android:text="AC"

                android:layout_width="80dp"

                android:layout_height="match_parent"

                android:onClick="functionKeyOnClick"

                android:padding="0dp"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypadBS"

                android:text="BS"

                android:layout_width="80dp"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:onClick="functionKeyOnClick"

                android:textSize="24sp" />

        </TableRow>



        <TableRow

            android:id="@+id/tableRow2"

            android:layout_width="wrap_content"

            android:layout_height="match_parent"

            android:layout_weight="1" >



            <Button

                android:id="@+id/keypad7"

                android:text="7"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:onClick="numKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypad8"

                android:text="8"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:onClick="numKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypad9"

                android:text="9"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:onClick="numKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypadDiv"

                android:text="/"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:onClick="operatorKeyOnClick"

                android:textSize="24sp" />

        </TableRow>



        <TableRow

            android:id="@+id/tableRow3"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_weight="1" >



            <Button

                android:id="@+id/keypad4"

                android:text="4"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:onClick="numKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypad5"

                android:text="5"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:onClick="numKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypad6"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:text="6"

                android:onClick="numKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypadMulti"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:text="*"

                android:onClick="operatorKeyOnClick"

                android:textSize="24sp" />

        </TableRow>



        <TableRow

            android:id="@+id/tableRow4"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_weight="1" >



            <Button

                android:id="@+id/keypad1"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:text="1"

                android:onClick="numKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypad2"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:text="2"

                android:onClick="numKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypad3"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:text="3"

                android:onClick="numKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypadSub"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:text="-"

                android:onClick="operatorKeyOnClick"

                android:textSize="24sp" />

        </TableRow>



        <TableRow

            android:id="@+id/tableRow5"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_weight="1" >



            <Button

                android:id="@+id/keypad0"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:text="0"

                android:onClick="numKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypadDot"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:padding="0dp"

                android:text="."

                android:onClick="numKeyOnClick"

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypadEq"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:onClick="operatorKeyOnClick"

                android:padding="0dp"

                android:text="="

                android:textSize="24sp" />



            <Button

                android:id="@+id/keypadAdd"

                android:text="+"

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:onClick="operatorKeyOnClick"

                android:padding="0dp"

                android:textSize="24sp" />

        </TableRow>

    </TableLayout>



</LinearLayout>